<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DVORASII1150">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:text="DVOR ASII 1150 Schedules"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:onClick="dailyClicked"
            android:text="DAILY" />

        <Button
            android:id="@+id/weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:onClick="weeklyClicked"
            android:text="WEEKLY" />

        <Button
            android:id="@+id/monthly"
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/teal_700"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:onClick="monthlyClicked"
            android:layout_height="wrap_content"
            android:text="MONTHLY" />

        <Button
            android:id="@+id/sixmonthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:onClick="halfYearlyClicked"
            android:backgroundTint="@color/teal_700"
            android:text="HALF YEARLY" />

        <Button
            android:id="@+id/annual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_columnSpan="2"
            android:onClick="yearlyClicked"
            android:backgroundTint="@color/teal_700"
            android:text="ANNUAL" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:text="Designed by - Akshay Bele"
            android:textAlignment="center"
            android:textStyle="italic|bold"
            android:textColor="@color/teal_700"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:id="@+id/textView2" />



    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>